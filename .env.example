# Your backend server port
PORT=5000

# PostgreSQL connection string (Replace with your actual database credentials)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="postgresql://user:password@localhost:5432/mydb"

# The URL where your frontend (React/Next.js) is running (Used for CORS)
FRONTEND_URL="http://localhost:3000"

# A unique secret key for Better Auth (used for signing session tokens)
# You can generate one using `openssl rand -base64 32`
BETTER_AUTH_SECRET=your_generated_secret

# The base URL of your backend API (must match where the server is hosted)
BETTER_AUTH_URL=http://localhost:5000

# The email address that should be promoted to ADMIN role when running the seed script
ADMIN_EMAIL="admin@foodhub.com"
ADMIN_PASS="your_admin_password"
ADMIN_NAME="System Admin"

# Gmail SMTP configuration for sending emails
GMAIL_NAME="your-email@gmail.com"
GMAIL_APP_PASS="your-gmail-app-password"
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
